    <script>
        
        function iniciarSesion() {
        var codigo = $("#codigo").val(); // Obtener el valor del campo código
        var password = $("#password").val(); // Obtener el valor del campo contraseña
        // Crear un objeto con las credenciales
        var credenciales = {
            Codigo: codigo,
            Password: password
        };


        $.ajax({
            // url: 'https://localhost:7167/api/Test/Login',
                url: 'https://localhost:7167/api/Loggin/Login',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(credenciales),
            success: function (response) {
                // Manejar la respuesta del servidor en caso de éxito
                console.log(response);

                  window.location.href = 'https://localhost:7192/Consulta/index';
                    // nombredeUsuario(response.nombreUsuario)

                    let timerInterval;
                    Swal.fire({
                        title: "Iniciando Sesion",
                        html: "Estara entrando en... <b></b> millisegundos.",
                        timer: 2000,
                        timerProgressBar: true,
                        didOpen: () => {
                            Swal.showLoading();
                            const timer = Swal.getPopup().querySelector("b");
                            timerInterval = setInterval(() => {
                                timer.textContent = `${Swal.getTimerLeft()}`;
                            }, 100);
                        },
                        willClose: () => {
                            clearInterval(timerInterval);
                        }
                    }).then((result) => {
                        /* Read more about handling dismissals below */
                        if (result.dismiss === Swal.DismissReason.timer) {
                            console.log("I was closed by the timer");
                        }
                    });
                // Redirigir a una página de inicio de sesión exitoso o realizar alguna acción
            },
            error: function (error) {
                // Manejar errores de la solicitud al servidor
                console.log(error.responseJSON);
                    if (error.responseJSON && error.responseJSON.mensaje) {
                        // alert(error.responseJSON.mensaje);
                        Swal.fire({
                            icon: "error",
                            title: "Error al Ingresar",
                            text: "Codigo Socio y/o Clave Incorrecta",
                            // footer: '<a href="#">Why do I have this issue?</a>'
                        });
                    } else {
                        // alert("Error desconocido al iniciar sesión.");
                        Swal.fire({
                            title: "Error",
                            text: "Error desconocido al iniciar sesión.",
                            icon: "question"
                        });
                    }
                // Mostrar un mensaje de error al usuario o realizar alguna acción
            }
        });
        }
        iniciarSesion();

    </script>
