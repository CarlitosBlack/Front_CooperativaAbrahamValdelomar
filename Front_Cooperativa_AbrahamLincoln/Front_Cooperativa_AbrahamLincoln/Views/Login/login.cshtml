    <script>
        function iniciarSesion() {
        var codigo = $("#codigo").val(); // Obtener el valor del campo código
        var password = $("#password").val(); // Obtener el valor del campo contraseña
        // Crear un objeto con las credenciales
        var credenciales = {
            Codigo: codigo,
            Password: password
        };


        $.ajax({
            url: 'https://localhost:7167/api/Test/Login',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(credenciales),
            success: function (response) {
                // Manejar la respuesta del servidor en caso de éxito
                console.log(response);
                    
                  window.location.href = 'https://localhost:7192/';
                    
                // Redirigir a una página de inicio de sesión exitoso o realizar alguna acción
            },
            error: function (error) {
                // Manejar errores de la solicitud al servidor
                console.log(error.responseJSON);
                    if (error.responseJSON && error.responseJSON.mensaje) {
                        alert(error.responseJSON.mensaje);
                    } else {
                        alert("Error desconocido al iniciar sesión.");
                    }
                // Mostrar un mensaje de error al usuario o realizar alguna acción
            }
        });
        }

    </script>
